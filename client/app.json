{
  "expo": {
    "name": "Attune",
    "slug": "client",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icons/ios-dark.png",
    "scheme": "client",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pranshdalal.client",
      "googleServicesFile": "./GoogleService-Info.plist",
      "icon": {
        "dark": "./assets/icons/ios-dark.png",
        "light": "./assets/icons/ios-light.png",
        "tinted": "./assets/icons/ios-tinted.png"
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "We use the microphone to measure ambient noise levels during focus sessions.",
        "NSCameraUsageDescription": "We use the camera to measure ambient lighting conditions during focus sessions.",
        "NSMotionUsageDescription": "We use motion data to detect activity during focus sessions.",
        "NSBluetoothAlwaysUsageDescription": "App needs Bluetooth to connect to wearable device"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#14141D"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.pranshdalal.client",
      "googleServicesFile": "./google-services.json",
      "permissions": ["RECORD_AUDIO", "CAMERA", "BODY_SENSORS"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "react-native-permissions",
        {
          "iosPermissions": ["Microphone"]
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#14141D"
        }
      ],
      "expo-web-browser",
      "expo-font",
      "react-native-ble-plx"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "215df35a-9318-4fc6-84f6-2e8b7fc6fc17"
      }
    },
    "owner": "dalalapte"
  }
}
